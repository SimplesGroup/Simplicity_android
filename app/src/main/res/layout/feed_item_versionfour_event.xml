<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:id="@+id/listlayout_taball"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitegradient"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/feed_item_margin"
            android:orientation="vertical"
            >
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/image_alltab"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="275dp"
                        android:minHeight="275dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:visibility="visible" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:id="@+id/taball_play_pause_main"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_alignTop="@+id/image_alltab"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="110dp"
                        android:src="@mipmap/playradio"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/qtypetitle_taball"

                        android:textColor="@color/red"

                        android:layout_width="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/qtypetitle_sourcename"

                        android:textColor="@color/red"

                        android:layout_width="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/item_title_taball"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    />
</LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="7dp"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:id="@+id/textview_shortdescription"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/date_taball"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight=".39"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/button_likes"
                            android:layout_width="0dp"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/heart"
                            android:layout_weight=".13"
                            android:layout_height="30dp" />
                        <ImageButton
                            android:id="@+id/button_comment"
                            android:layout_width="0dp"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/commentnew"
                            android:layout_weight=".13"
                            android:layout_height="30dp" />
                        <ImageButton
                            android:id="@+id/button_share"
                            android:layout_width="0dp"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/sharenew"
                            android:layout_weight=".13"
                            android:layout_height="30dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight=".20"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="right"
                        android:layout_weight=".41"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_marginTop="5dp"
                            android:id="@+id/alltab_commentscount"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="10dp"
                            android:gravity="right|center"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:id="@+id/alltab_likescount"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/white"
                            android:gravity="right|center"
                            android:layout_marginRight="5dp"
                            android:layout_alignParentRight="true"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/counts_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                    <View
                        android:id="@+id/line_separter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                </LinearLayout>


                <TableLayout
                    android:visibility="gone"
                    android:layout_marginTop="3dp"

                    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"    android:focusable="true" android:focusableInTouchMode="true" >
                    <TableRow   android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <Button android:layout_width="0dp" android:textAllCaps="false" android:background="@color/whitefood" android:layout_margin="2dp"  android:drawableLeft="@mipmap/like" android:paddingRight="23dp"  android:layout_height="30dp"  android:id="@+id/taball_likes"
                            android:textColor="@color/white"  android:textSize="12dp"  android:layout_weight=".33" />

                        <Button android:layout_width="0dp" android:textAllCaps="false" android:background="@color/whitefood" android:layout_margin="2dp" android:paddingRight="10dp" android:drawableLeft="@mipmap/comment"  android:layout_height="30dp"  android:id="@+id/taball_comment"
                            android:textColor="@color/white"  android:textSize="12dp"  android:layout_weight=".34"  />

                        <Button android:layout_width="0dp" android:textAllCaps="false" android:background="@color/whitefood" android:layout_margin="2dp" android:layout_height="30dp" android:paddingRight="17dp" android:drawableLeft="@mipmap/share"  android:id="@+id/taball_sharepost"
                            android:textColor="@color/white" android:textSize="12dp"  android:layout_weight=".33"/>
                        <Button android:layout_width="0dp" android:textAllCaps="false" android:visibility="gone"  android:background="@color/whitefood" android:layout_margin="2dp" android:layout_height="30dp"   android:id="@+id/taball_savepage"
                            android:textColor="@color/white" android:textSize="12dp"  android:layout_weight="0" android:gravity="center" android:textAlignment="center"/>

                    </TableRow>
                </TableLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>










