<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/citycenterbg"
    android:id="@+id/main_layout_explore"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="70dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:id="@+id/patient_payment_details"
                android:background="#333333"
                android:padding="7dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="7dp"
                android:background="#555"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".60"
                    android:id="@+id/consultation_fees"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="left|center_vertical"

                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".40"
                    android:id="@+id/consultation_fees_detail"
                   android:gravity="right"
                    android:layout_gravity="right|center_vertical"

                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="7dp"
                android:background="#555"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".60"
                    android:id="@+id/subtotal_fees"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="left|center_vertical"

                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".40"
                    android:id="@+id/subtotal_fees_detail"
                    android:gravity="right"
                    android:layout_gravity="right|center_vertical"

                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="7dp"
                android:background="#555"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".60"
                    android:id="@+id/grandtotal_fees"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="left|center_vertical"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".40"
                    android:id="@+id/grandtotal_fees_detail"
                    android:gravity="right"
                    android:layout_gravity="right|center_vertical"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:id="@+id/patient_licences_details"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/Pay_fees_button"
                android:minHeight="50dp"
                android:background="#555"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FF000000"

        android:layout_alignParentBottom="true">
        <ImageButton android:id="@+id/btn_ex_back"
            android:layout_marginRight="1dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@mipmap/back"
            android:background="@drawable/buttonselector"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            />

        <ImageButton android:id="@+id/btn_ex_happening"
            android:layout_margin="1dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@mipmap/star"
            android:gravity="center_horizontal"
            />
        <ImageButton android:id="@+id/btn_ex_search"
            android:layout_margin="1dp"

            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@mipmap/menu"
            android:gravity="center_horizontal" />
        <ImageButton android:id="@+id/btn_ex_entertainment"
            android:layout_margin="1dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@mipmap/searchexplore"
            android:gravity="center_horizontal"
            />

        <ImageButton android:id="@+id/btn_ex_more"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/settings"
            android:gravity="center_horizontal"
            />


    </LinearLayout>
</RelativeLayout>