<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/version_main_layout"
    android:background="@drawable/musicbg"
    tools:context=".Enternainment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/whitefood"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:id="@+id/title_coimbatore"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"

                android:textSize="30dp"
                android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/weatherlinear"
            android:orientation="vertical"
            android:layout_below="@+id/title_coimbatore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
            android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/weather"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="19dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                   android:layout_toRightOf="@+id/weather"
                    android:layout_marginRight="10dp"
                    android:id="@+id/weatherimage"
                    android:src="@drawable/weathernew"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:id="@+id/weather_degree"
                android:layout_toRightOf="@+id/weatherimage"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:textSize="17dp"
                android:layout_height="wrap_content" />
            </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/whitefood"
                android:id="@+id/radio"
                android:orientation="vertical"
                android:layout_below="@+id/weatherlinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/title_radioshow"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:text="News"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/morebuttonofthreedots"
                        android:background="@android:color/transparent"
                        android:id="@+id/move_to_radio"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/my_recycler_view_radio"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:id="@+id/divider_news"
                android:layout_below="@+id/radio"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:background="@color/whitefood"
                android:id="@+id/music"
                android:orientation="vertical"
                android:layout_below="@+id/divider_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/title_musicshow"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:text="News"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/morebuttonofthreedots"
                        android:background="@drawable/buttonselector"
                        android:id="@+id/move_to_music"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/my_recycler_view_music"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"

                android:layout_below="@+id/music"
                android:id="@+id/divider_article"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:background="@color/whitefood"
                android:orientation="vertical"
                android:id="@+id/theatre"
                android:layout_below="@+id/divider_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/title_theatreshow"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:text="News"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/morebuttonofthreedots"
                        android:background="@android:color/transparent"
                        android:id="@+id/move_to_theatre"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/my_recycler_view_theatre"

                    android:layout_width="match_parent"
                    android:layout_height="130dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_below="@+id/theatre"
                android:background="@android:color/transparent"/>




        </LinearLayout>
    </ScrollView>
    <LinearLayout android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#FF000000"

        android:layout_alignParentBottom="true">
        <ImageButton android:id="@+id/btn_1"
            android:layout_marginRight="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/latest"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            />

        <ImageButton android:id="@+id/btn_2"
            android:layout_margin="1dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/city"
            android:gravity="center_horizontal"
            />
        <ImageButton android:id="@+id/btn_3"
            android:layout_margin="1dp"

            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:gravity="center_horizontal" />
        <ImageButton android:id="@+id/btn_4"
            android:layout_margin="1dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/entert"
            android:gravity="center_horizontal"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
        <ImageButton android:id="@+id/btn_5"
            android:layout_margin="1dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/notifymain"
            android:gravity="center_horizontal"
            />
            <TextView
                android:id="@+id/text_batchvalue_main"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignTop="@id/btn_moreoptions"
                android:layout_centerInParent="true"
                android:layout_alignRight="@id/btn_moreoptions"
                android:background="@drawable/batgetext"
                android:gravity="center"
                android:shadowColor="@android:color/white"
                android:shadowRadius="10.0"
                android:textColor="@android:color/white"
                android:textSize="10sp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
