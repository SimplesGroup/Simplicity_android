<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/version_main_layout"
    android:background="@drawable/newsbg"
    tools:context=".LatestNews">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/whitefood"
        android:orientation="vertical"
        android:paddingBottom="60dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:id="@+id/title_coimbatore"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Coimbatore"
            android:textSize="30dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/weatherlinear"
            android:orientation="vertical"
            android:layout_below="@+id/title_coimbatore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/weather"
                    android:paddingLeft="10dp"
                    android:layout_toLeftOf="@+id/weatherimage"
                    android:textColor="@android:color/white"

                    android:textSize="14dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:id="@+id/weatherimage"
                    android:src="@drawable/weathernew"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/weather_degree"
                    android:layout_toRightOf="@+id/weatherimage"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="12dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/whitefood"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
           android:textAlignment="center"
            android:layout_centerHorizontal="true"
         android:gravity="center"
            android:text="News"
            android:textSize="17dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="wrap_content"
           android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/morebuttonofthreedots"
            android:background="@android:color/transparent"
            android:id="@+id/move_to_news"
            android:layout_height="wrap_content" />
</RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/my_recycler_view"
        android:scrollbars="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:id="@+id/divider_news"
            android:background="@android:color/transparent"/>
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:id="@+id/ad_news_imageview"/>
    <LinearLayout
        android:background="@color/whitefood"
        android:orientation="vertical"
        android:layout_below="@+id/ad_news_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Article of the day"
                android:textSize="17dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/morebuttonofthreedots"
                android:background="@android:color/transparent"
                android:id="@+id/move_to_article"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/my_recycler_viewtwo"
        android:scrollbars="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:id="@+id/divider_article"
            android:background="@android:color/transparent"/>
<com.android.volley.toolbox.NetworkImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"

    android:id="@+id/ad_article_imageview"/>
    <LinearLayout
        android:background="@color/whitefood"
        android:orientation="vertical"
        android:layout_below="@+id/ad_article_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Govt.Notifications"
                android:textSize="17dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/morebuttonofthreedots"
                android:background="@android:color/transparent"
                android:id="@+id/move_to_govt"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
        android:id="@+id/my_recycler_viewthree"
        android:scrollbars="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:background="@android:color/transparent"/>
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:id="@+id/ad_govt_imageview"/>
    <LinearLayout
        android:background="@color/whitefood"
        android:orientation="vertical"
        android:layout_below="@+id/ad_govt_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Events"
                android:textSize="17dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
               android:layout_centerHorizontal="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/morebuttonofthreedots"
                android:background="@android:color/transparent"
                android:id="@+id/move_to_event"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
        android:id="@+id/my_recycler_viewfour"
        android:scrollbars="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:background="@android:color/transparent"/>
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:id="@+id/ad_event_imageview"/>
    <LinearLayout
        android:background="@color/whitefood"
        android:orientation="vertical"
        android:layout_below="@+id/ad_event_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Sports"
                android:textSize="17dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
               android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/morebuttonofthreedots"
                android:background="@android:color/transparent"
                android:id="@+id/move_to_sports"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/my_recycler_viewfive"
        android:scrollbars="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="200dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:background="@android:color/transparent"/>
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:id="@+id/ad_sports_imageview"/>
    <LinearLayout
        android:background="@color/whitefood"
        android:orientation="vertical"
        android:layout_below="@+id/ad_sports_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Science"
                android:textSize="17dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/morebuttonofthreedots"
                android:background="@android:color/transparent"
                android:id="@+id/move_to_science"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/my_recycler_viewsix"
            android:scrollbars="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:background="@android:color/transparent"/>
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:id="@+id/ad_science_imageview"/>
    <LinearLayout
        android:background="@color/whitefood"
        android:orientation="vertical"
        android:layout_below="@+id/ad_science_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Health"
                android:textSize="17dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/morebuttonofthreedots"
                android:background="@android:color/transparent"
                android:id="@+id/move_to_health"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/my_recycler_viewseven"
            android:scrollbars="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:id="@+id/divider_health"
            android:background="@android:color/transparent"/>

    <LinearLayout
        android:background="@color/whitefood"
        android:orientation="vertical"
        android:layout_below="@+id/divider_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Farming"
                android:textSize="17dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
               android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/morebuttonofthreedots"
                android:background="@android:color/transparent"
                android:id="@+id/move_to_farming"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/my_recycler_viewseven"
            android:id="@+id/my_recycler_vieweight"
            android:scrollbars="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:id="@+id/divider_farming"
            android:background="@android:color/transparent"/>

    <LinearLayout
        android:background="@color/whitefood"
        android:orientation="vertical"
        android:layout_below="@+id/divider_farming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Do it yourself"
                android:textSize="17dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/morebuttonofthreedots"
                android:background="@android:color/transparent"
                android:id="@+id/move_to_doit"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/my_recycler_vieweight"
            android:id="@+id/my_recycler_view_doit"
            android:scrollbars="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <LinearLayout android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#FF000000"

        android:layout_alignParentBottom="true">
        <ImageButton android:id="@+id/btn_1"
            android:layout_marginRight="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/latest"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            />

        <ImageButton android:id="@+id/btn_2"
            android:layout_margin="1dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/city"
            android:gravity="center_horizontal"
            />
        <ImageButton android:id="@+id/btn_3"
            android:layout_margin="1dp"

            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:gravity="center_horizontal" />
        <ImageButton android:id="@+id/btn_4"
            android:layout_margin="1dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/entert"
            android:gravity="center_horizontal"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
        <ImageButton android:id="@+id/btn_5"
            android:layout_margin="1dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:src="@drawable/notifymain"
            android:gravity="center_horizontal"
            />

    <TextView
        android:id="@+id/text_batchvalue_main"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignTop="@id/btn_5"
        android:layout_centerInParent="true"
        android:layout_alignRight="@id/btn_5"
        android:background="@drawable/batgetext"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:textColor="@android:color/white"
        android:textSize="10sp"/>
</RelativeLayout>
    </LinearLayout>
</RelativeLayout>
