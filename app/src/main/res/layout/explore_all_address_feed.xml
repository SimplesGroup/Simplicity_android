<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="7dp"
    android:background="@color/whitefood"
    tools:context=".Explore.ProductListPage"

    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight=".60"

                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/explore_user_delivery_name"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/explore_user_delivery_address"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="1dp"
                    android:id="@+id/explore_user_delivery_address_continue"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".40"

                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/explore_cartalladdress_usethis"
                    android:textColor="@android:color/white"
                    android:layout_gravity="left"
                    android:textAlignment="center"
                    android:gravity="center|center_horizontal"
                    android:layout_marginTop="5dp"

                    android:textSize="14dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@color/whitefood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:id="@+id/explore_cartalladdress_edit"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"

                    android:padding="5dp"
                    android:background="@color/whitefood"

                    android:layout_marginTop="5dp"

                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            </LinearLayout>
    </LinearLayout>


</LinearLayout>