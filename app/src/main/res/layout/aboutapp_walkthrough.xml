<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<TextView

    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:id="@+id/whatis_textview"
    android:textColor="@android:color/white"
    android:textSize="23dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/whatis_textview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/simplicity_textview"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/simplicity_textview"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:id="@+id/description_textview"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/description_textview"
        android:layout_marginTop="10dp"
        android:id="@+id/welcome_textview"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        </RelativeLayout>
    </ScrollView>
    <ImageButton
        android:layout_alignParentBottom="true"

        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"

        android:id="@+id/next_imagebutton"
        android:background="@android:color/transparent"
        android:src="@mipmap/forwardarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>