<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/whitefood"
    android:id="@+id/explore_layout"
    android:layout_marginBottom="5dp"

    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<com.android.volley.toolbox.NetworkImageView
    android:layout_width="40dp"
    android:layout_marginTop="15dp"
    android:id="@+id/explore_product_category_image"
    android:layout_centerHorizontal="true"
    android:layout_height="40dp" />
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/explore_product_category_image"
        android:layout_width="match_parent"
        android:id="@+id/explore_product_category_name"
        android:textAlignment="center" android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>