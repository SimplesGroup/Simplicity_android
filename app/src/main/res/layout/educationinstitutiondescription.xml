<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/version_main_layout"
    android:background="@drawable/custombg">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scroll"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:paddingBottom="80dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="380dp" >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/thumbnailone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/whitegradient"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/about_education"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/about_education"
                    android:textColor="@color/white"

                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/about_education_description"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:id="@+id/divider_news"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:background="@color/whitefood"
                android:orientation="vertical"
                android:layout_below="@+id/divider_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/white"
                        android:text="At the Helm of Affairs"
                        android:textSize="17dp"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/my_recycler_afffairs"
                    android:scrollbars="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="@android:color/transparent"/>
            <RelativeLayout
                android:background="@color/whitefood"

                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/title_facilities"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:layout_height="wrap_content" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/title_facilities"
    android:orientation="horizontal"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/title_autitorim_label"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="left"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/title_autitorim_detail"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12dp"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/title_autitorim_label"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/title_bank_label"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="left"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_autitorim_detail"
        android:layout_marginTop="5dp"
        android:id="@+id/title_bank_detail"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12dp"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_bank_label"
        android:id="@+id/title_bookstore_label"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="left"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_bank_detail"
        android:id="@+id/title_bookstore_detail"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12dp"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_bookstore_label"
        android:id="@+id/title_cafeteria_label"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="left"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_bookstore_detail"
        android:id="@+id/title_cafeteria_detail"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12dp"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_cafeteria_label"
        android:id="@+id/title_infrastructure_label"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="left"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_cafeteria_detail"
        android:id="@+id/title_infrastructure_detail"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12dp"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_infrastructure_label"
        android:id="@+id/title_mandapam_label"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="left"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_infrastructure_detail"
        android:id="@+id/title_mandapam_detail"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12dp"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_mandapam_label"
        android:id="@+id/title_gym_label"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="left"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_below="@+id/title_mandapam_detail"
        android:layout_marginTop="5dp"
        android:id="@+id/title_gym_detail"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12dp"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_below="@+id/title_gym_label"
        android:layout_marginTop="5dp"
        android:id="@+id/title_hostel_label"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="left"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_gym_detail"
        android:id="@+id/title_hostel_detail"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12dp"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_hostel_label"
        android:id="@+id/title_library_label"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="left"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_hostel_detail"
        android:id="@+id/title_library_detail"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12dp"

        android:layout_height="wrap_content" />
</RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/whitegradient"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/title_address"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:text="Address"
                    android:textSize="17dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/title_address_detail"
                    android:textColor="@android:color/white"
                    android:text="Address"
                    android:textSize="14dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FF000000"
        android:orientation="horizontal"

        android:layout_alignParentBottom="true">

        <ImageButton android:id="@+id/btn_1"
            android:layout_marginTop="30dp"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:background="@drawable/buttonselector"
            android:gravity="center"
            android:layout_weight="1"
            />

        <ImageButton android:id="@+id/btn_2"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/favtwo"
            android:gravity="center"
            />
        <ImageButton android:id="@+id/btn_3"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/menutwo"
            android:gravity="center" />
        <ImageButton android:id="@+id/btn_4"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonselector"
            android:src="@drawable/commenttwo"
            android:gravity="center"
            />
        <ImageButton android:id="@+id/btn_5"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:src="@mipmap/share"
            android:gravity="center"
            />



    </LinearLayout>



</RelativeLayout>