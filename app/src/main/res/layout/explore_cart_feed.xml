<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="7dp"
    android:background="@color/whitefood"
    tools:context=".Explore.ProductListPage"

    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:id="@+id/explore_cartlist_image"
            android:scaleType="centerCrop"
            android:layout_height="105dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight=".75"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight=".60"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:id="@+id/explore_cartlist_title"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:id="@+id/explore_cartlist_weight"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"

                    android:id="@+id/explore_cartlist_delivery"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:id="@+id/explore_cartlist_shippingcharge"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:id="@+id/explore_cartlist_maxqty"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:id="@+id/explore_cartlist_change"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.15"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView

                    android:layout_marginTop="14dp"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:background="@color/whitefood"
                    android:id="@+id/explore_cartlist_plus"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@+id/explore_cartlist_plus"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:padding="3dp"
                    android:background="@color/whitefood"
                    android:id="@+id/explore_cartlist_count"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@+id/explore_cartlist_count"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:background="@color/whitefood"
                    android:id="@+id/explore_cartlist_minus"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:minHeight="42dp"
                android:gravity="center|center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textAlignment="center"
                android:background="@color/whitefood"
                android:layout_weight=".50"
                android:id="@+id/remove_list"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:minHeight="42dp"
                android:gravity="center|center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textAlignment="center"
                android:background="@color/whitefood"
                android:layout_weight=".50"
                android:id="@+id/remove_addtowishlist"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>