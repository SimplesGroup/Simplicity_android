<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/eventsbg">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scroll"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:paddingBottom="80dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textAlignment="center"
                    android:text="POST YOUR EVENTS"
                    android:textColor="@color/white"
                    android:id="@+id/add_post_your_newevent"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:background="@color/whitegradient"
        android:hint="Title"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_title"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="CATEGORY"
        android:focusableInTouchMode="false"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_category"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Venue"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_venue"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Location"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_location"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:focusableInTouchMode="false"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Start Date"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_startdate"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="End Date"
        android:focusableInTouchMode="false"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_enddate"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Timing"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_Timing"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Organized By"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_organizedby"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Contact Name"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_contactname"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Contact Phone"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_contactphone"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Contact Email"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_contactemail"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Website"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_contactwebsite"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="description"
        android:minHeight="150dp"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_description"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="ENTRY TYPE"
        android:focusableInTouchMode="false"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_entrytype"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whitegradient"
        android:hint="Fee Amount"
        android:textColorHint="@android:color/white"
        android:id="@+id/add_newevent_feeamount"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:id="@+id/add_newevent_chooseimagefile"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textAllCaps="false"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:id="@+id/add_newevent_postevent"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="@color/whitegradient"
        android:textAllCaps="false"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>




        </LinearLayout>
    </ScrollView>


    <LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FF000000"
        android:orientation="horizontal"

        android:layout_alignParentBottom="true">

        <ImageButton android:id="@+id/btn_1"
            android:layout_marginTop="30dp"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:background="@drawable/buttonselector"
            android:gravity="center"
            android:layout_weight="1"
            />

        <ImageButton android:id="@+id/btn_2"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/addnewevent"
            android:gravity="center"
            />
        <ImageButton android:id="@+id/btn_3"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/menutwo"
            android:gravity="center" />
        <ImageButton android:id="@+id/btn_4"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonselector"
            android:src="@drawable/search"
            android:gravity="center"
            />
        <ImageButton android:id="@+id/btn_5"
            android:layout_margin="1dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:src="@mipmap/share"
            android:gravity="center"
            />



    </LinearLayout>



</RelativeLayout>