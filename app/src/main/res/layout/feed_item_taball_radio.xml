<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listlayout_taball"
    android:layout_marginBottom="10dp"
    android:background="@color/whitegradient"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/feed_item_margin"
            android:orientation="vertical"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/qtypetitle_taball"
                    android:background="@color/whitefood"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/item_title_taball"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/date_taball"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/image_alltab"
                    android:layout_width="fill_parent"
                    android:layout_height="275dp"

                    android:drawingCacheQuality="low"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:visibility="visible" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:id="@+id/taball_play_pause"
                        android:layout_centerHorizontal="true"
                        android:layout_alignTop="@+id/image_alltab"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="110dp"
                        android:src="@mipmap/playradio"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:id="@+id/counts_layout"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="fill_horizontal"
                            android:background="#27ffffff" />


                    </LinearLayout>
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:id="@+id/alltab_likescount"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/white"
                            android:gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentLeft="true"
                            android:textSize="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/alltab_commentscount"
                            android:textColor="@android:color/white"
                            android:layout_marginRight="10dp"
                            android:gravity="right"
                            android:layout_alignParentRight="true"
                            android:textSize="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>
                <TableLayout

                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"    android:focusable="true" android:focusableInTouchMode="true" >
                    <TableRow   android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <Button android:layout_width="0dp"  android:background="#23ffffff" android:layout_margin="2dp" android:textAlignment="center" android:layout_height="30dp"  android:id="@+id/taball_likes"
                            android:textColor="@color/white"  android:textSize="12dp"  android:layout_weight=".25" android:gravity="center" />

                        <Button android:layout_width="0dp"  android:background="#23ffffff" android:layout_margin="2dp" android:textAlignment="center" android:layout_height="30dp"  android:id="@+id/taball_comment"
                            android:textColor="@color/white"  android:textSize="12dp"  android:layout_weight=".25" android:gravity="center" />

                        <Button android:layout_width="0dp" android:background="#23ffffff" android:layout_margin="2dp" android:layout_height="30dp"   android:id="@+id/taball_sharepost"
                            android:textColor="@color/white" android:textSize="12dp"  android:layout_weight=".25" android:gravity="center" android:textAlignment="center"/>
                        <Button android:layout_width="0dp"  android:background="#23ffffff" android:layout_margin="2dp" android:layout_height="30dp"   android:id="@+id/taball_savepage"
                            android:textColor="@color/white" android:textSize="12dp"  android:layout_weight=".25" android:gravity="center" android:textAlignment="center"/>

                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>







</RelativeLayout>










