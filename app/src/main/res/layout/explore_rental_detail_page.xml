<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/citycenterbg"
    android:id="@+id/main_layout_explore"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:isScrollContainer="true"
            android:paddingBottom="70dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="270dp" >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/explore_productdetail_productimage"
                    android:layout_width="fill_parent"
                    android:maxHeight="270dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                >
                <LinearLayout
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:paddingBottom="4dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:background="@color/whitefood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/explore_rentaldetail_name"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18dp"
                            android:textColor="@android:color/white"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/explore_rentaldetail_date"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="17dp"
                            android:textColor="@android:color/white"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/explore_rentaldetail_contactperson"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="10dp"

                            android:textColor="@android:color/white"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/explore_rentaldetail_phone"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="10dp"

                            android:textColor="@android:color/white"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:id="@+id/location_icon"
                                android:background="@android:color/transparent"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/explore_rentaldetail_location"
                                android:layout_marginLeft="3dp"
                                android:paddingTop="10dp"
                                android:textColor="@android:color/white"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <WebView
        android:id="@+id/rental_webview_desc"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/whitefood"
        android:layout_height="45dp">
        <TextView
            android:paddingTop="5dp"
            android:layout_weight=".50"
            android:id="@+id/explore_rental_pricetext"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:background="@color/whitefood"
            android:textColor="@android:color/white"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_weight=".50"
            android:id="@+id/explore_rental_callnow"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/rental_webview_tips"

                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
</RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FF000000"

        android:layout_alignParentBottom="true">
        <ImageButton android:id="@+id/btn_ex_back"
            android:layout_marginRight="1dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@mipmap/back"
            android:background="@drawable/buttonselector"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            />

        <ImageButton android:id="@+id/btn_ex_happening"
            android:layout_margin="1dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@mipmap/star"
            android:gravity="center_horizontal"
            />
        <ImageButton android:id="@+id/btn_ex_search"
            android:layout_margin="1dp"

            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@mipmap/menu"
            android:gravity="center_horizontal" />
        <ImageButton android:id="@+id/btn_ex_entertainment"
            android:layout_margin="1dp"
            android:background="@drawable/buttonselector"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@mipmap/searchexplore"
            android:gravity="center_horizontal"
            />
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageButton android:id="@+id/btn_ex_more"
                android:layout_margin="1dp"
                android:background="@drawable/buttonselector"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:src="@mipmap/settings"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/text_batchvalue_main"
                android:minWidth="20dp"
                android:visibility="gone"
                android:minHeight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignTop="@id/btn_artcileprofile"
                android:layout_centerInParent="true"
                android:layout_alignRight="@id/btn_artcileprofile"
                android:background="@drawable/batgetext"
                android:gravity="center"
                android:shadowColor="@android:color/white"
                android:shadowRadius="10.0"
                android:textColor="@android:color/white"
                android:textSize="10sp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>