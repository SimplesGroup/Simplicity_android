<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:minWidth="170dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_lang"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="Choose your Language"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
              android:layout_below="@+id/text_lang"
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tamil"
                    android:textSize="12sp"
                    android:checked="false"
                    android:buttonTint="@color/colorAccent"
                    android:textColor="@android:color/white"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:checked="false"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorAccent"
                    android:textColor="@android:color/white"
                    android:text="English"
                    />
            </RadioGroup>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="Choose your color"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/color"
                android:layout_alignParentLeft="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme1"
                />
            <ImageButton
                android:id="@+id/color2"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme2"
                />
            <ImageButton
                android:id="@+id/color3"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme3"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/color4"
                android:layout_alignParentLeft="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme4"
                />
            <ImageButton
                android:id="@+id/color5"
                android:layout_centerInParent="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme5"
                />
            <ImageButton
                android:id="@+id/color6"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme6"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/color7"
                android:layout_alignParentLeft="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme7"
                />
            <ImageButton
                android:id="@+id/color8"
                android:layout_centerInParent="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme8"
                />
            <ImageButton
                android:id="@+id/color9"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme9"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/color10"
                android:layout_alignParentLeft="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme10"
                />
            <ImageButton
                android:id="@+id/color11"
                android:layout_centerInParent="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme11"
                />
            <ImageButton
                android:id="@+id/color12"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme12"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="140dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/color13"
                android:layout_centerInParent="true"
                android:layout_margin="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/theme13"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tablelayout"
            android:id="@+id/viewwhiteline"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/white"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/viewwhiteline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginTop="7dp"
                    android:layout_width="0dp"
android:layout_weight=".50"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/continue_button"
                    android:background="@color/whitefood"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:text="Continue"
                    android:layout_height="30dp" />
                <Button
                    android:layout_marginTop="7dp"
                    android:layout_width="0dp"
                    android:layout_weight=".50"
                    android:layout_margin="2dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:id="@+id/close_button"
                    android:background="@color/whitefood"
                    android:textAlignment="center"
                    android:text="Close"
                    android:layout_height="30dp" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>